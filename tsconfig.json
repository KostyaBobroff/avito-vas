{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "config/*": ["config/*"],
      "store/*": ["store/*"]
    },
    "typeRoots": ["./node_modules/@types", "typings.d.ts"],
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
